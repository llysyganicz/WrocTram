<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WrocTram.App.Views.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Path=SearchText, Mode=TwoWay}"
                   VerticalOptions="Start" HorizontalOptions="Fill"/>
            <ListView ItemsSource="{Binding Path=Boards}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Path=Name}" Detail="{Binding Path=Direction}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>